@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix regen: <http://regen.network/> .
@prefix qudt: <http://qudt.org/schema/qudt/> .
@prefix unit: <http://qudt.org/vocab/unit/> .
@prefix geojson: <https://purl.org/geojson/vocab#> .
@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

regen:ProjectShape a sh:NodeShape ;
  sh:targetClass regen:Project ;
  sh:property [
    sh:path schema:name ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
    sh:group regen:ProjectPageBasicInfoGroup ;
  ] ;
  sh:property [
    sh:path regen:projectSize ;
    sh:node regen:SizeShape ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageBasicInfoGroup ;
  ] ;
  sh:property [
    sh:class geojson:Feature ;
    sh:path schema:location ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageLocationGroup ;
  ] ;
  sh:property [
    sh:path regen:projectDeveloper ;
    sh:node regen:RoleShape ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageRolesGroup ;
  ] ;
  sh:property [
    sh:path schema:description ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:maxLength 600 ;
    sh:datatype xsd:string ;
    sh:group regen:ProjectPageDescriptionGroup ;
  ] ;
  sh:property [
    sh:path regen:previewPhoto ;
    sh:datatype schema:URL ;
    sh:name "Preview photo" ;
    sh:group regen:ProjectPagePhotosGroup ;
  ] ;
  sh:property [
    sh:path regen:galleryPhotos ;
    sh:node dash:ListShape ;
    sh:property [
      sh:path ( [ sh:zeroOrMorePath rdf:rest ] rdf:first ) ;
      sh:datatype schema:URL ;
      sh:group regen:ProjectPagePhotosGroup ;
    ] ;
    sh:group regen:ProjectPagePhotosGroup ;
  ] ;
  sh:property [
    sh:path regen:offsetGenerationMethod ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
  sh:property [
    sh:path regen:projectActivity ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:node regen:NameUrlShape ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
  sh:property [
    sh:path regen:vcsProjectId ;
    sh:datatype xsd:unsignedInt ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
  sh:property [
    sh:path regen:vcsProjectPage ;
    sh:datatype schema:URL ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
  sh:property [
    sh:path regen:projectType ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
  sh:property [
    sh:path regen:projectStartDate ;
    sh:datatype xsd:date ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
  sh:property [
    sh:path regen:projectEndDate ;
    sh:datatype xsd:date ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
  sh:property [
    sh:path regen:vcsMethodology ;
    sh:node regen:NameUrlShape ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
.

regen:NameUrlShape a sh:NodeShape ;
  sh:targetClass regen:NameUrl;
  sh:property [
    sh:path schema:name ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
  sh:property [
    sh:path schema:url ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype schema:URL ;
    sh:group regen:ProjectPageMetadataGroup ;
  ] ;
.

regen:SizeShape a sh:NodeShape ;
  sh:property [
    sh:path qudt:unit ;
    sh:datatype qudt:Unit ;
    sh:in ( "unit:HA"^^qudt:Unit "unit:AC"^^qudt:Unit ) ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageBasicInfoGroup ;
  ] ;
  sh:property [
    sh:path qudt:numericValue ;
    sh:minExclusive 0 ;
    sh:datatype xsd:double ;
    sh:maxCount 1 ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageBasicInfoGroup ;
  ] ;
.

regen:RoleShape
  a sh:NodeShape ;
  sh:targetClass regen:Individual ;
  sh:targetClass regen:IndividualDisplay ;
  sh:targetClass regen:Organization ;
  sh:targetClass regen:OrganizationDisplay ;
  sh:property [
    sh:path regen:showOnProjectPage ;
    sh:datatype xsd:boolean ;
    sh:hasValue true ;
    sh:group regen:ProjectPageRolesGroup ;
  ] ;
  sh:property [
    sh:path schema:name ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:group regen:ProjectPageRolesGroup ;
  ] ;
  sh:property [
    sh:path schema:image ;
    sh:datatype schema:URL ;
    sh:group regen:ProjectPageRolesGroup ;
  ] ;
  sh:property [
    sh:path schema:description ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:maxLength 160 ;
    sh:group regen:ProjectPageRolesGroup ;
  ] ;
.

# Groups

regen:ProjectPageBasicInfoGroup
	a sh:PropertyGroup ;
	rdfs:label "Basic Info" ;
	sh:order "1"^^xsd:decimal .

regen:ProjectPageLocationGroup
	a sh:PropertyGroup ;
	rdfs:label "Location" ;
	sh:order "2"^^xsd:decimal .

regen:ProjectPageRolesGroup
	a sh:PropertyGroup ;
	rdfs:label "Roles" ;
	sh:order "3"^^xsd:decimal .

regen:ProjectPageDescriptionGroup
	a sh:PropertyGroup ;
	rdfs:label "Description" ;
	sh:order "4"^^xsd:decimal .

regen:ProjectPagePhotosGroup
	a sh:PropertyGroup ;
	rdfs:label "Photos" ;
	sh:order "5"^^xsd:decimal .

regen:ProjectPageMetadataGroup
	a sh:PropertyGroup ;
	rdfs:label "Metadata" ;
	sh:order "6"^^xsd:decimal .