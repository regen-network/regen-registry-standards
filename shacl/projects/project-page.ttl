@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix regen: <http://regen.network/> .

# Unanchored - single schema for all credit classes

regen:ProjectPageShape a sh:NodeShape ;
  sh:targetClass regen:Project-Page ;

  sh:property [
    sh:path regen:creditClassId ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;

  sh:property regen:DescriptionPropertyShape ;
  sh:property regen:PreviewPhotoPropertyShape ;
  sh:property regen:GalleryPhotosPropertyShape ;
  sh:property regen:VideoURLPropertyShape ;

  sh:property regen:VCSProjectIdOptionalPropertyShape ;
  sh:property regen:VCSProjectPageOptionalPropertyShape ; 
  sh:property regen:VCSMethodologyOptionalPropertyShape ;

  sh:property regen:CFCProjectIdOptionalPropertyShape ;
  sh:property regen:CFCProjectPageOptionalPropertyShape ;

  sh:property [
    sh:path schema:creditText ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:group regen:ProjectPageMediaGroup ;
  ] ;
.
