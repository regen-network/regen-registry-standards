@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix regen: <http://regen.network/> .
@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

regen:C03-ProjectShape a sh:NodeShape ;
  sh:targetClass regen:C03-Project ;

  sh:property regen:NamePropertyShape ;
  sh:property regen:ToucanProjectTokenIDPropertyShape ;
  sh:property [
    sh:path regen:vcsProjectId ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property regen:ToucanURIPropertyShape ;

  sh:property [
    sh:path regen:approvedMethodologies ;
    sh:node dash:ListShape ;
    sh:property [
      sh:path ( [ sh:zeroOrMorePath rdf:rest ] rdf:first ) ;
      sh:node regen:C03-MethodologyVersionShape ;
    ] ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;

  sh:property regen:ProjectActivityOptionalPropertyShape ;
  sh:property regen:ProjectTypeOptionalPropertyShape ;
  sh:property [
    sh:path regen:offsetGenerationMethod ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property regen:ProjectOptionalStartDatePropertyShape ;
  sh:property regen:ProjectOptionalEndDatePropertyShape ;
.

regen:ToucanProjectTokenIDPropertyShape sh:path regen:toucanProjectTokenId ;
  sh:datatype xsd:integer ;
  sh:minCount 1 ;
  sh:maxCount 1 ;
  sh:minLength 1;
.
